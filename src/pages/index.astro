	<body>
		<h1>Wadsworth</h1>

		<div class="form-group">
			<label class="url-input">
				YouTube URL:
				<input type="url" />
			</label>
			<div class="form-actions">
				<input id="copy" type="button" value="Copy">
				<input id="open" type="button" value="Open">
			</div>
		</div>

		<div id="player"></div>
