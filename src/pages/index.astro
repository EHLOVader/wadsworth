<style is:global lang="scss">
	html, body {
		height: 100vh;
		margin: 0;
		padding: 0;
	}

	body {
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		background: linear-gradient(to right, red 0%, red 30%, white 30%, white 100%);
	}

	h1 {
		color: #fff;;
		position: relative;

		font-size: calc(30vw*0.15);
		margin-left: calc(10vw*0.2);

		@media( max-width: 830px) {
			font-size: calc(90vw * 0.15);
			margin-left: calc(50vw * 0.2);

			&:before {
				content: "Wadsworth";
				position: absolute;
				left: 0;
				top: 0;
				color: #FFF;
				width: calc(30% - (40vw * 0.2));
				overflow: hidden;
				z-index: 999;
			}

			&:after {
				content: "Wadsworth";
				position: absolute;
				left: calc(30% - (40vw * 0.2));
				top: 0;
				text-indent: calc((30% - (15vw * 0.2)) * -1);
				color: #F00;
				overflow: hidden;
				z-index: 999;
			}
		}
	}

	iframe#player {
		display:none;
	}

	.form-group {
		display: flex;
		border: 1px solid #333;
		border-radius: 8px;
		justify-content: space-between;
		margin-left: 10%;
		margin-right: 10%;
		background: #fff;

		@media( max-width: 830px) {
			flex-direction: column;
		}

	}

	.url-input {
		display: flex;
		flex-direction: column;
		color: #333;
		font-size: 1.5em;
		font-weight: bold;
		padding: 12px;
		flex: 1;

		input {
			margin-top: 0.5em;
			padding: 0.5em;
			font-size: 1em;
			border: none;
			border-bottom: 1px solid #333;
		}
	}


	input[type="button"] {
		margin: 0.25em;
		padding:   0.5em 2em;
		border: 1px solid #333;
		border-radius: 8px;
		font-size: 1.5em;
		background: #F00;
		color: #FFF;
		flex: 1;

	}

	.form-actions {
		display: flex;
		justify-content: space-between;
		padding: 12px;
	}

</style>

<script is:inline>
	const input = document.querySelector('.url-input input');
	input.addEventListener('input',  (event) => {

		const video_id = event.target.value.split('v=')[1];
		console.log(video_id);
		const player = new YT.Player('player', {
			videoId: video_id,
			events: {
				'onReady': onPlayerReady
			}
		});

		function onPlayerReady() {
			const time = player.getDuration();
			const wadsworth = Math.floor(time * 0.30);
			window.wurl = `https://www.youtube.com/watch?v=${video_id}&t=${wadsworth}s`;
			console.log(wurl);
		}

		console.log(event.target.value);

	});


	const copy = document.getElementById('copy');
	copy.addEventListener('click', function()  {
		navigator.clipboard.writeText(window.wurl).then(function() {
			console.log('Async: Copying to clipboard was successful!');
		}, function(err) {
			console.error('Async: Could not copy text: ', err);
		});
	});

	const open = document.getElementById('open');
	open.addEventListener('click', function() {
		window.open(window.wurl);
	});
</script>